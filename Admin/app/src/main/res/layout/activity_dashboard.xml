<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dashboard_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard"
    android:backgroundTint="#65FFFFFF"
    android:backgroundTintMode="src_over">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Dashbord"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Hospitals"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:onClick="onViewHospital" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add hospital"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:onClick="onAddHospital" />



</LinearLayout>
