<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    tools:context=".Dashboard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Screen"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is your helper in this time of pandemic where you can find vacant beds in any hospital round India."
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Hospitals"
        android:onClick="onViewHospital"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View favourites"
        android:onClick="onViewFavourites"/>


    <TextView
        android:id="@+id/set_user_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USER: Aman Pratap Singh\nUSERNAME: username123"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"/>

</LinearLayout>
